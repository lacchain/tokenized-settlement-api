            "name": "body",
            "description": "institution token address and amount to mint",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "tokenAddress": {
                  "type": "string",
                  "default": "0x5967b9b16024Ffc06Ef25Af6D77de00c5C5D621B"
                },
                "amount": {
                  "type": "integer",
                  "default": 1
                },
                "network": {
                  "type": "string",
